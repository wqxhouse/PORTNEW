                </Border.BitmapEffect>
                <Image Source="{Binding Path=Avatar, Converter={StaticResource ImageConverter}, Mode=OneWay}" Stretch="Uniform"  VerticalAlignment="Top" MaxWidth="110" MaxHeight="122" StretchDirection="Both"/>
